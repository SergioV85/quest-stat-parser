{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "es2015"
    ],
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": ".build",
    "typeRoots": [
      "node_modules/@types",
      "./typings",
      "./src/typings"
    ],
    "skipLibCheck": true,
    "rootDir": "./"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}